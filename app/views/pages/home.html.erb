<div id="header">
  <div id="title" class="text-center">
    <h1>CÃ©sar Lacaille, Web Developer - Digital Nomad</h1>
    <h2>Welcome to my world !</h2>
  </div>
  <div id="world">
    <div id="north-america" class="continent">
      <%= inline_svg "north-america_animated.svg" %>
    </div>
    <div id="south-america" class="continent">
      <%= inline_svg "south-america_animated.svg" %>
    </div>
    <div id="eurasia-africa" class="continent">
      <%= inline_svg "eurasia-africa_animated.svg" %>
    </div>
    <div id="australia" class="continent">
      <%= inline_svg "australia_animated.svg" %>
    </div>
  </div>
</div>

<div id="content">

</div>

<% content_for :after_js do %>
  <script>
    $("#title").hide().fadeIn(3000);

    $("#north-america").click(function() {
      $('#content').empty().html("<%= j render 'pages/about' %>");
      $('html, body').animate({
          scrollTop: $("#about").offset().top
      }, 1000);
    });

    $("#south-america").click(function() {
      $('#content').empty().html("<%= j render 'pages/skills' %>");
      $('html, body').animate({
          scrollTop: $("#skills").offset().top
      }, 1000);
    });

    $("#eurasia-africa").click(function() {
      $('#content').empty().html("<%= j render 'pages/work' %>");
      $('html, body').animate({
          scrollTop: $("#work").offset().top
      }, 1000);
    });

    $("#australia").hover(function() {
      event.preventDefault();
    })
    $("#australia").click(function() {
      $('#content').empty().html("<%= j render 'pages/contact' %>");
      $('html, body').animate({
          scrollTop: $("#contact").offset().top
      }, 1000);
    });
  </script>
<% end %>
